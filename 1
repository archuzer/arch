#!/bin/bash

mkfs.vfat /dev/nvme0n1p1

mount /dev/nvme0n1p2 /mnt
mount --mkdir /dev/nvme0n1p1 /mnt/boot

pacstrap -K /mnt base linux linux-firmware sudo xorg xorg-xinit i3 alacritty networkmanager grub efibootmgr base-devel chromium xf86-video-intel htop dmenu tmux pipewire pipewire-alsa pipewire-pulse pipewire-jack brightnessctl vim fzf git

arch-chroot /mnt
useradd -mG wheel -s /bin/bash d
grub-install --efi-directory=/boot
grub-mkconfig -o /boot/grub/grub.cfg
systemctl enable NetworkManager
sed -i '125s/^#/ /' /etc/sudoers
curl -sL tinyurl.com/comcompp -o /home/d/2
