#!/bin/bash

echo "export GTK_THEME=Adwaita:dark" > ~/.xinitrc
echo "setxkbmap -option caps:escape_shifted_capslock" >> ~/.xinitrc
echo "xrandr --output HDMI1 --above eDP1" >> ~/.xinitrc
echo "exec i3" >> ~/.xinitrc

echo "alias is='sudo pacman -S'" >> ~/.bashrc
echo "alias ss='sudo pacman -Ss'" >> ~/.bashrc
echo "alias qs='sudo pacman -Qs'" >> ~/.bashrc
echo "alias up='sudo pacman -Syyu'" >> ~/.bashrc
echo "alias gy='git clone https://aur.archlinux.org/yay ; cd yay ; makepkg -si'" >> ~/.bashrc

sudo pacman -S --needed intel-ucode base-devel xorg xorg-xinit i3 alacritty chromium xf86-video-intel libva-intel-driver htop dmenu pipewire pipewire-alsa pipewire-pulse pipewire-jack brightnessctl fzf vlc ranger
